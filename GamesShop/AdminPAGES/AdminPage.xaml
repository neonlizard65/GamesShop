<Page x:Class="GamesShop.AdminPAGES.AdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GamesShop.AdminPAGES"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Добро пожаловать, администратор!" FontSize="36" Margin="10" Foreground="White"/>
            <Button x:Name="AddGameBtn" Content="Добавить игру" Click="AddGameBtn_Click" Margin="5"/>
            <Button x:Name="EditGameBtn" Content="Поменять/удалить игру" Click="EditGameBtn_Click" Margin="5"/>

        </StackPanel>
    </Grid>
</Page>
